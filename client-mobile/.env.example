# ==============================================
# PressKit Pro - Expo Mobile Application Environment Variables
# ==============================================

# APP CONFIGURATION
EXPO_PUBLIC_APP_NAME=PressKit Pro
EXPO_PUBLIC_APP_SLUG=presskit-pro
EXPO_PUBLIC_IOS_BUNDLE_ID=com.presskitpro.app
EXPO_PUBLIC_ANDROID_PACKAGE=com.presskitpro.app

# API CONFIGURATION
EXPO_PUBLIC_API_URL=http://localhost:5000/api
EXPO_PUBLIC_WEB_URL=http://localhost:3000
EXPO_PUBLIC_API_TIMEOUT=10000

# AUTHENTICATION
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
EXPO_PUBLIC_ENABLE_BIOMETRICS=true
EXPO_PUBLIC_DEEP_LINK_SCHEME=presskitpro

# EXPO SERVICES
EXPO_PROJECT_ID=your-expo-project-id
EAS_PROJECT_ID=your-eas-project-id
EAS_BUILD_PROFILE=development

# PUSH NOTIFICATIONS
EXPO_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true
EXPO_PUBLIC_FCM_PROJECT_ID=your-firebase-project-id

# CLOUDINARY
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
EXPO_PUBLIC_CLOUDINARY_API_KEY=your_cloudinary_api_key
EXPO_PUBLIC_MAX_FILE_SIZE=104857600

# STRIPE PAYMENTS
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
EXPO_PUBLIC_APPLE_PAY_MERCHANT_ID=merchant.com.presskitpro.app

# ANALYTICS
EXPO_PUBLIC_ANALYTICS_ENABLED=true
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
EXPO_PUBLIC_AMPLITUDE_API_KEY=your_amplitude_api_key

# SOCIAL MEDIA
EXPO_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id
EXPO_PUBLIC_INSTAGRAM_CLIENT_ID=your_instagram_client_id
EXPO_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id

# ERROR TRACKING
EXPO_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# THEME & DESIGN
EXPO_PUBLIC_THEME_MODE=dark
EXPO_PUBLIC_PRIMARY_COLOR=#8B5CF6
EXPO_PUBLIC_FONT_FAMILY=Poppins

# DEVELOPMENT
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_USE_MOCK_DATA=false
