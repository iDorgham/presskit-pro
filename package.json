{
  "name": "presskit-pro",
  "version": "1.0.0",
  "description": "Professional Electronic Press Kit platform for artists across web, iOS, and Android",
  "private": true,
  "scripts": {
    "setup": "npm run setup:server && npm run setup:web && npm run setup:mobile",
    "setup:server": "cd server && npm install",
    "setup:web": "cd client-web && npm install",
    "setup:mobile": "cd client-mobile && npm install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\" \"npm run dev:mobile\"",
    "dev:server": "cd server && npm run dev",
    "dev:web": "cd client-web && npm run dev",
    "dev:mobile": "cd client-mobile && npx expo start",
    "build": "npm run build:server && npm run build:web",
    "build:server": "cd server && npm run build",
    "build:web": "cd client-web && npm run build",
    "test": "npm run test:server && npm run test:web && npm run test:mobile",
    "test:server": "cd server && npm test",
    "test:web": "cd client-web && npm test",
    "test:mobile": "cd client-mobile && npm test",
    "lint": "npm run lint:server && npm run lint:web && npm run lint:mobile",
    "lint:server": "cd server && npm run lint",
    "lint:web": "cd client-web && npm run lint",
    "lint:mobile": "cd client-mobile && npm run lint",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,md}\"",
    "clean": "npm run clean:server && npm run clean:web && npm run clean:mobile",
    "clean:server": "cd server && rm -rf dist node_modules",
    "clean:web": "cd client-web && rm -rf .next node_modules",
    "clean:mobile": "cd client-mobile && rm -rf .expo node_modules",
    "reset": "npm run clean && npm run setup",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "workspaces": [
    "server",
    "client-web",
    "client-mobile"
  ],
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.15",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.2",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "jest": "^30.0.4",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.1",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "server/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "client-web/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "client-mobile/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "electronic-press-kit",
    "epk",
    "artists",
    "musicians",
    "nextjs",
    "react-native",
    "expo",
    "nodejs",
    "mongodb",
    "typescript"
  ],
  "author": "PressKit Pro Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/presskit-pro.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/presskit-pro/issues"
  },
  "homepage": "https://github.com/yourusername/presskit-pro#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@sentry/node": "^9.40.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.4",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "stripe": "^18.3.0",
    "winston": "^3.17.0"
  }
}
