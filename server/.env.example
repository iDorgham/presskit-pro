# ==============================================
# PressKit Pro - Backend API Environment Variables
# ==============================================
# Copy this file to .env and fill in your actual values
# Keep .env file private and never commit it to version control

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Node.js environment (development, staging, production)
NODE_ENV=development

# Server port (default: 5000)
PORT=5000

# Application URL (for CORS and redirects)
APP_URL=http://localhost:5000

# Frontend URLs (comma-separated for CORS)
CLIENT_WEB_URL=http://localhost:3000
CLIENT_MOBILE_URL=http://localhost:19006
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,https://yourdomain.com

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB connection string
# Local: mongodb://localhost:27017/presskit-pro-dev
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/presskit-pro
MONGODB_URI=mongodb://localhost:27017/presskit-pro-dev

# Database connection options
DB_MAX_POOL_SIZE=10
DB_SOCKET_TIMEOUT_MS=45000
DB_SERVER_SELECTION_TIMEOUT_MS=5000

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# JWT Secret Key (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long

# JWT token expiration time (7d, 30d, etc.)
JWT_EXPIRES_IN=7d

# JWT refresh token expiration
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt password hashing rounds (10-12 recommended)
BCRYPT_ROUNDS=12

# Session secret for express-session
SESSION_SECRET=your_session_secret_key_here

# ==============================================
# RATE LIMITING & SECURITY
# ==============================================

# Rate limiting window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Rate limit for auth endpoints (stricter)
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Enable HTTPS redirect in production
FORCE_HTTPS=false

# ==============================================
# FILE STORAGE - CLOUDINARY
# ==============================================

# Cloudinary credentials (get from: https://cloudinary.com/console)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Upload settings
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4,audio/mpeg,application/pdf

# ==============================================
# PAYMENT PROCESSING - STRIPE
# ==============================================

# Stripe API keys (get from: https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe webhook secret (get from webhook endpoint in dashboard)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe API version
STRIPE_API_VERSION=2023-10-16

# Product/Price IDs for subscription plans
STRIPE_PREMIUM_PRICE_ID=price_premium_monthly_id
STRIPE_PRO_PRICE_ID=price_pro_monthly_id

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# SMTP Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=PressKit Pro

# Email templates
WELCOME_EMAIL_TEMPLATE_ID=d-your_sendgrid_template_id
RESET_PASSWORD_TEMPLATE_ID=d-your_reset_template_id

# ==============================================
# MONITORING & LOGGING
# ==============================================

# Sentry configuration (get from: https://sentry.io)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Winston logging level (error, warn, info, debug)
LOG_LEVEL=info

# Log to file (true/false)
LOG_TO_FILE=true

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================

# Spotify Web API (for music integration)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Apple Music API (for track previews)
APPLE_MUSIC_PRIVATE_KEY_ID=your_apple_music_key_id
APPLE_MUSIC_TEAM_ID=your_apple_team_id
APPLE_MUSIC_PRIVATE_KEY=your_apple_music_private_key

# Social Media APIs
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# reCAPTCHA (for spam protection)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Mailchimp (for email marketing)
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_mailchimp_list_id

# ==============================================
# ANALYTICS & TRACKING
# ==============================================

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Plausible Analytics (privacy-focused alternative)
PLAUSIBLE_DOMAIN=yourdomain.com

# ==============================================
# CACHING & PERFORMANCE
# ==============================================

# Redis configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Cache TTL in seconds (1 hour = 3600)
CACHE_TTL=3600

# ==============================================
# NOTIFICATION SERVICES
# ==============================================

# Firebase Cloud Messaging (for push notifications)
FCM_PROJECT_ID=your_firebase_project_id
FCM_PRIVATE_KEY_ID=your_firebase_private_key_id
FCM_PRIVATE_KEY=your_firebase_private_key
FCM_CLIENT_EMAIL=your_firebase_client_email
FCM_CLIENT_ID=your_firebase_client_id

# ==============================================
# BACKUP & STORAGE
# ==============================================

# AWS S3 (for backups and additional storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-backup-bucket

# ==============================================
# DEVELOPMENT & DEBUGGING
# ==============================================

# Enable debug mode
DEBUG=true

# API documentation (Swagger/OpenAPI)
ENABLE_API_DOCS=true

# Database query logging
LOG_DB_QUERIES=false

# Disable auth for development (USE WITH CAUTION)
DISABLE_AUTH=false

# Mock external services for testing
MOCK_STRIPE=false
MOCK_SENDGRID=false
MOCK_CLOUDINARY=false

# ==============================================
# HEALTH CHECKS & MONITORING
# ==============================================

# Health check endpoint security
HEALTH_CHECK_SECRET=your_health_check_secret

# Enable metrics endpoint
ENABLE_METRICS=true

# Uptime monitoring webhook
UPTIME_WEBHOOK_URL=https://your-uptime-service.com/webhook
